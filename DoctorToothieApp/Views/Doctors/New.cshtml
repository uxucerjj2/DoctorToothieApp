@model DoctorToothieApp.Controllers.DoctorsNewVM

<form asp-action="New">

	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="DoctorId" class="control-label"></label>
		<select asp-for="DoctorId" asp-items="Model.Users"></select>
		<span asp-validation-for="DoctorId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LocationId" class="control-label"></label>
		<select asp-for="LocationId" asp-items="Model.Locations"></select>
		<span asp-validation-for="LocationId" class="text-danger"></span>
	</div>
	
	<div>
		<a asp-action="Index" class="btn btn-primary">Anuluj</a>
		<button class="btn btn-success" type="submit">Dodaj</button>
	</div>

</form>