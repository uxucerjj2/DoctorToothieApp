@model DoctorToothieApp.Controllers.DoctorsEditVM

<form asp-action="Edit" autocomplete="off">

	<input asp-for="DoctorId" />

	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div>
		Doctor:<br/>
		@Model.Doctor.FirstName @Model.Doctor.LastName<br/>
		@Model.Doctor.Email
	</div>
	<div class="form-group">
		<label asp-for="LocationId" class="control-label"></label>
		<select asp-for="LocationId" autocomplete="off" asp-items="Model.Locations" ></select>
		<span asp-validation-for="LocationId" class="text-danger"></span>
	</div>

	<div>
		<a asp-action="Index" class="btn btn-primary">Anuluj</a>
		<button class="btn btn-success" type="submit">Zmień</button>
	</div>

</form>