@model DoctorToothieApp.Controllers.ReserveDateVM
@{
}
<h2>Wybierz date</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Date">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>

                <input asp-for="Time" type="date" />

                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Procedure">Cofnij</a>
                <a class="btn btn-danger" asp-action="Cancel">Anuluj</a>
                <button type="submit" class="btn btn-success">Dalej</button>
            </div>
        </form>
    </div>
</div>