@model DoctorToothieApp.Controllers.ReserveLocationVM
@{
    ViewData["Title"] = "Create";
}
<h2>Wybierz placówkę</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Location" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>

                <select asp-for="LocationId" asp-items="Model.Locations">
                    
                </select>

                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-action="Cancel">Anuluj</a>
                <input type="submit" value="Dalej" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

