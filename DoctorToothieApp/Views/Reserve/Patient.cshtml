@model DoctorToothieApp.Controllers.ReservePatientVM
@{
}
<h2>Wybierz pacjenta</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Patient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>

                <select asp-for="PatientId" asp-items="Model.Patients">
                </select>

                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Room">Cofnij</a>
                <a class="btn btn-danger" asp-action="Cancel">Anuluj</a>
                <button type="submit" class="btn btn-success">Dalej</button>
            </div>
        </form>
    </div>
</div>