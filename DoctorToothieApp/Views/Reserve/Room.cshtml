@model DoctorToothieApp.Controllers.ReserveRoomVM
@{
    ViewData["Title"] = "Create";
}
<h2>Wybierz pokój</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Room">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>

                <select asp-for="RoomId" asp-items="Model.Rooms">
                </select>

                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Location">Cofnij</a>
                <a class="btn btn-danger" asp-action="Cancel">Anuluj</a>
                <button type="submit" class="btn btn-success">Dalej</button>
            </div>
        </form>
    </div>
</div>