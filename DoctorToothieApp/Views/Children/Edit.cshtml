@model DoctorToothieApp.Controllers.ChildrenEditVM

<form asp-action="Edit" autocomplete="off">
	<input asp-for="Id" />

	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="FirstName" class="control-label"></label>
		<input asp-for="FirstName" autocomplete="off" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LastName" class="control-label"></label>
		<input asp-for="LastName" autocomplete="off" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Email" class="control-label"></label>
		<input asp-for="Email" autocomplete="off" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password" class="control-label"></label>
		<input asp-for="Password" autocomplete="off" />
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ConfirmPassword" class="control-label"></label>
		<input asp-for="ConfirmPassword" autocomplete="off" />
		<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
	</div>
	<div>
		<a asp-action="Index" class="btn btn-primary">Cofnij</a>

		@if(!string.IsNullOrWhiteSpace(Model.Email))
		{
			<a asp-action="Unlock" asp-route-id="@Model.Id" class="btn btn-danger">Unlock</a>
		}

		<button class="btn btn-success" type="submit">Dodaj</button>
	</div>

</form>