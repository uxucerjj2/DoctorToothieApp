@model DoctorToothieApp.Controllers.RolesEditUserVM
@{
}
<div class="row"> 
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" hidden value="@Model.UserId"/>
            <div class="form-group">
                <label asp-for="Roles" class="control-label"></label>

                <select asp-for="Roles" multiple>
                    @foreach(var role in Model.AviableRoles)
                    {
                        <option value="@role">@role</option>
                    }
                    </select>

                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>